                <Button android:id="@+id/dj32" style="@style/Widget.St.BreakerButton" android:text="DJ32"/>
                <Button android:id="@+id/dj33" style="@style/Widget.St.BreakerButton" android:text="DJ33"/>
                <Button android:id="@+id/dj34" style="@style/Widget.St.BreakerButton" android:text="DJ34"/>
                <Button android:id="@+id/dj35" style="@style/Widget.St.BreakerButton" android:text="DJ35"/>
                <Button android:id="@+id/dj36" style="@style/Widget.St.BreakerButton" android:text="DJ36"/>
                <Button android:id="@+id/dj37" style="@style/Widget.St.BreakerButton" android:text="DJ37"/>
                <Button android:id="@+id/dj38" style="@style/Widget.St.BreakerButton" android:text="DJ38"/>
                <Button android:id="@+id/dj39" style="@style/Widget.St.BreakerButton" android:text="DJ39"/>
            </GridLayout>
    
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
